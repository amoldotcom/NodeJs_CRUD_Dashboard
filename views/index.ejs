<%- include('partials/headerPartials.ejs') %>

<div class="container">
	<div class="row">
		<div class="col-sm-6 mt-5">
			<h2 class="alert alert-success text-center">Add new student</h2>
			<form method="post">
				<div class="mb-3">
					<label for="name" class="form-label">Name</label>
					<input type="text" class="form-control" id="name" name="name" />
				</div>
				<div class="mb-3">
					<label for="age" class="form-label">Age</label>
					<input type="text" class="form-control" id="age" name="age" />
				</div>
				<div class="mb-3">
					<label for="fees" class="form-label">Fees</label>
					<input type="text" class="form-control" id="fees" name="fees" />
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>
		<div class="col-sm-6 mt-5">
			<h2 class="alert alert-danger text-center">List of students</h2>
			<%# Show All Data %>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th scope="col">No</th>
						<th scope="col">Name</th>
						<th scope="col">Age</th>
						<th scope="col">Fees</th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
					<!-- For each loop to display all data -->
					<% var i=1 %> <% data.forEach((item)=>{%>
					<tr>
						<td><%= i++ %></td>
						<td><%= item.name %></td>
						<td><%= item.age %></td>
						<td><%= item.fees %></td>
						<td>
							<!-- Converted to form, as using action we can re-direct it to other url -->
							<!-- Here, both get & post can work, as we only need id from url -->
							<!-- class= "d-inline" will make two buttons inline -->
							<form action="/edit/<%= item._id%>" method="get" class="d-inline">
								<button type="submit" class="btn">
									<i class="fas fa-pen-square text-info"></i>
								</button>
							</form>
							<form action="/delete/<%=item._id%>" method="post" class="d-inline">
								<button type="submit" class="btn">
									<i class="fas fa-trash text-danger"></i>
								</button>
							</form>
						</td>
					</tr>
					<%}) %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<%- include('partials/footerPartials.ejs') %>
